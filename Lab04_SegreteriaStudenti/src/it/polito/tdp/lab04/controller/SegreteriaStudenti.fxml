                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button fx:id="btnCercaCorsi" layoutX="14.0" layoutY="51.0" mnemonicParsing="false" onAction="#doCercaCorsi" text="Cerca corsi">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button fx:id="btnCheck" layoutX="169.0" layoutY="9.0" mnemonicParsing="false" onAction="#doCheck" prefHeight="27.0" prefWidth="16.0">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../../../../../../../../Downloads/sign-check-icon.png" />
                           </image>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                     </graphic>
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                  </Button>
               </children>
            </Pane>
            <TextArea fx:id="txtResult" editable="false" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
   <bottom>
      <Pane prefHeight="53.0" prefWidth="556.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnReset" layoutX="490.0" layoutY="13.0" mnemonicParsing="false" onAction="#doReset" text="Reset">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </Pane>
   </bottom>
</BorderPane>
